<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Created on"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tanggalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2023-02-02"
            app:layout_constraintStart_toEndOf="@id/tanggal"
            app:layout_constraintTop_toTopOf="@id/tanggal"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tanggalijin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Absence on"
            app:layout_constraintStart_toStartOf="@id/tanggal"
            app:layout_constraintTop_toBottomOf="@id/tanggalTV" />

        <TextView
            android:id="@+id/tanggalijinTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            app:layout_constraintStart_toStartOf="@id/tanggalTV"
            app:layout_constraintTop_toTopOf="@id/tanggalijin"/>

        <TextView
            android:id="@+id/substitute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Substitute"
            app:layout_constraintStart_toStartOf="@id/tanggal"
            app:layout_constraintTop_toBottomOf="@id/tanggalijin" />

        <TextView
            android:id="@+id/substituteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            app:layout_constraintStart_toStartOf="@id/tanggalTV"
            app:layout_constraintTop_toTopOf="@id/substitute"/>

        <TextView
            android:id="@+id/rvketerangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="@id/tanggal"
            app:layout_constraintTop_toBottomOf="@id/substitute" />

        <TextView
            android:id="@+id/rvketeranganTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            app:layout_constraintStart_toStartOf="@id/tanggalTV"
            app:layout_constraintTop_toTopOf="@id/rvketerangan"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Status"
            app:layout_constraintStart_toStartOf="@id/tanggal"
            app:layout_constraintTop_toBottomOf="@id/rvketerangan" />

        <TextView
            android:id="@+id/statusIjinTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tanggalTV"
            app:layout_constraintTop_toTopOf="@id/status"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>